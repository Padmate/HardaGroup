@using HardaGroup.Utility;
@using HardaGroup.Models;
@{
    Layout = null;
    var news = (M_NewsSearch)ViewData["NewsSearch"];
    var newsScopes = (List<M_NewsScopeSearch>)ViewData["NewsScope"];
    
    //当前所属模块
    var scopeName = newsScopes.Where(s=>s.Id == news.NewsScopeId).Select(s =>s.TypeName).FirstOrDefault();
}
<div class="close-modal" data-dismiss="modal">
    <i class="fa fa-3x fa-close"></i>
</div>
<div class="container">

    <h3 class="customer-h3 text-center curd-title">详 细</h3>
    <hr />
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">资讯模块：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">@scopeName</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">唯一标识：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">@news.NewsURLId</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">标题：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">@news.Title</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">二级标题：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">@news.SubTitle</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">内容简介：</label>
            </div>
            <div class="col-md-10">
                <textarea class="textarea-large" disabled="disabled">@news.Description</textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">资讯图标：</label>
            </div>
            <div class="col-md-10"></div>
            <div class="col-lg-4 col-md-6">
                @if (news.Image != null && !string.IsNullOrEmpty(news.Image.VirtualPath))
                {
                    <img class="img-responsive" id="showUploadImage" src="@news.Image.VirtualPath" alt="无图标" />

                }
                else
                {
                    <img class="img-responsive" id="showUploadImage" src="~/images/small_model.jpg" alt="无图标" />

                }

            </div>

        </div>
        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">发布时间：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">@news.Pubtime.ToString("yyyy-MM-dd hh:mm:ss")</label>
            </div>


        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                <label class="customer-content-sm">首页滚动：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">

                    @{
                        var isScroll = "否";
                        if (news.IsScroll)
                        {
                            isScroll = "是";
                        }
                    }
                    @isScroll
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                <label class="customer-content-sm">热点新闻：</label>
            </div>
            <div class="col-md-10">
                <label class="customer-content-sm">
                 @{
                     var isHot = "否";
                    if(news.IsHot){
                        isHot = "是";
                    }
                  }
                @isHot
                  
                </label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 text-right">
                <label class="customer-content-sm">内 容：</label>
            </div>
            <div class="col-md-10">
                @Html.Raw(news.Content)
            </div>
        </div>

    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-lg btn-info"
            data-dismiss="modal">
        退 出
    </button>
</div>



