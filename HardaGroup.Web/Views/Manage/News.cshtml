@using HardaGroup.Utility;
@using HardaGroup.Models;
@using System.Configuration;
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    ViewBag.Title = "媒体资讯";

    var urlRewriteExtension = ConfigurationManager.AppSettings["UrlRewriteExtension"];
    var allNewsScope = (List<M_NewsScopeSearch>)ViewData["NewsScope"];
    
}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12 col-is-12 col-sm-12 col-md-12">
            
        </div>
        
    </div>
    <div class="row">
        <div class="col-xs-12 col-is-12 col-sm-12 col-md-12">
               

            <div id="toolbar">
                <a id="btnAdd" class="btn btn-success">
                    <i class="glyphicon glyphicon-plus"></i> 新 增
                </a>
                <a id="btnEdit" class="btn btn-info">
                    <i class="glyphicon glyphicon-edit"></i> 修 改
                </a>
                <a id="btnDelete" class="btn btn-danger">
                    <i class="glyphicon glyphicon-remove"></i> 删 除
                </a>
                <a id="btnGlobalization" class="btn btn-primary">
                    <i class="glyphicon glyphicon-transfer"></i> 国际化
                </a>

            </div>
            <table id="table"></table>
            
        </div>

    </div>

</section>

<!--#region新增-->
<div class="curd-model modal fade" id="newsadd" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divAddContainer"></div>


        </div>
    </div>
</div>
<!--#endregion 修改-->
<!--#region修改-->
<div class="curd-model modal fade" id="newsedit" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divEditContainer"></div>


        </div>
    </div>
</div>
<!--#region详细-->
<div class="curd-model modal fade" id="newsdetail" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divNewsContainer"></div>


        </div>
    </div>
</div>
<!--#region国际化-->
<div class="curd-model modal fade" id="newsGlobalization" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="divGlobalizationContainer"></div>


        </div>
    </div>
</div>

<!--Script要放在HTML标签后，才能将值绑定到标签-->
<script type="text/javascript">

    var lsNewsScope = @Html.Raw(ViewData["jsonlsNewsScope"]);
    var lsYesNo = @Html.Raw(ViewData["yesno"]);
    //bootstrap filter 选择项
    var NewScopeTableSelect = {};
    for (var i = 0; i < lsNewsScope.length; i++) {
        NewScopeTableSelect[lsNewsScope[i].Id] = lsNewsScope[i].TypeName;
        
    }
    var YesNoTableSelect = {};
    for (var i = 0; i < lsYesNo.length; i++) {
        YesNoTableSelect[lsYesNo[i].Key] = lsYesNo[i].Value;
        
    }


    $(document).ready(function () {
        InitTable();
        InitToolBarButton();
        InitModalEvent();

        if(@allNewsScope.Count ==0)
        {
            layer.alert("请先在'模块管理'中添加模块数据", {
                skin: 'layui-layer-molv' //样式类名
                      , closeBtn: 0
            });
            //询问框
            layer.confirm('请先在"模块管理"中添加模块数据', {
                btn: ['现在就去', '稍后再说'] //按钮
            }, function () {
                location.href = '@string.Format("/manage/news-scope{0}",urlRewriteExtension)';
            }, function () {

            });
        }

    });
    function InitTable()
    {
        $('#table').bootstrapTable({
            height:800,
            method: 'post',                 //The method type to request remote data.
            url: '/News/GetPageData',
            dataType: "json",               //The type of data that you are expecting back from the server.
            contentType:'application/json',
            pagination: true,               //True to show a pagination toolbar on table bottom.
            pageSize: 10,                   //初始化每页显示几条
            pageNumber:1,                   //初始化在第几页
            pageList: [10,25,50,100,200,'All'],
            sidePagination: "server",       //服务端请求
            idField:'Id',
            toolbar:'#toolbar',
            showRefresh:true,
            search:false,
            paginationVAlign:'bottom',  //分页条显示在顶部
            //searchOnEnterKey:true,  //回车查询
            clickToSelect:true,     //单击行选中数据
            queryParams: ConstructQueryParams,
            //queryParamsType: "limit",
            locale:'zh-CN',
            showColumns: true,
            showToggle: true,
            showExport: true, //数据导出
            exportDataType: 'basic', // 'basic', 'all', 'selected'.
            exportTypes: ['excel'],
            filterControl: true,   //显示过滤
            filterShowClear: true,  //显示清空过滤按钮
            columns: [{
                checkbox: true
            },
            {
                field: 'Id',
                title: 'Id',
                visible:false,
            },
            {
                field: 'Image',
                title: '图 标',
                formatter: function (value, row, index) {

                    var image = row.Image;
                    if (image != null) {

                        var imgHtml = "<img class='img-responsive' src=" + image.VirtualPath + "></img>";
                        return imgHtml;
                    }
                },
                width: '20%'

            },
            {
                field: 'Title',
                title: '标题',
                filterControl: "input",
                formatter: function (value, row, index) {

                    var result = value;
                    if (result.length > 20) {
                        result = '<a class="custooltip" href="#">' + result.substr(0, 20) + '......<span class="classic">' + value + '</span></a>';

                    }
                    return result;
                }

            },
            {
                field: 'SubTitle',
                title: '二级标题',
                filterControl: "input",
                formatter: function (value, row, index) {

                    var result = value;
                    if (result.length > 20) {
                        result = '<a class="custooltip" href="#">' + result.substr(0, 20) + '......<span class="classic">' + value + '</span></a>';

                    }
                    return result;
                }

            },
            {
                field: 'Content',
                title: '内容',
                formatter: function (value, row, index) {
                    var result = '<a href="javaScript:void(0)" onclick="Detail(&apos;' + row.Id + '&apos;)">点击查看</a>';
                    return result;
                }

            },
            {
                field: 'NewsScopeId',
                title: '所属模块',
                filterControl:'select',
                filterData:'var:NewScopeTableSelect',
                formatter: function (value, row, index) {
                    return DicNewsScope(value);
                }

            },
            {
                field: 'IsScroll',
                title: '首页滚动',
                align:'center',
                filterControl:'select',
                filterData:'var:YesNoTableSelect',
                formatter: function (value, row, index) {

                    var result ="否";
                    if (value) {
                        return "<font style='color:red;'>是</font>";
                    }
                    return result;
                }

            },
            {
                field: 'IsHot',
                title: '热点新闻',
                align:'center',
                filterControl:'select',
                filterData:'var:YesNoTableSelect',
                formatter: function (value, row, index) {

                    var result ="否";
                    if (value) {
                        return "<font style='color:red;'>是</font>";
                    }
                    return result;
                }

            },
            {
                field: 'Pubtime',
                title: '发布时间',
                formatter: function (value, row, index) {

                    return JsonDateFormat2(value);
                }
            }
            ]
        });
    }


    function ConstructQueryParams(param)
    {
        var filterObj = {};
        if (param.filter != null) {
            filterObj = JSON.parse(param.filter);
        }

        var params = {
            limit: param.limit, //页面大小
            offset:param.offset,//偏移数量
            page: param.offset / param.limit, //页码
            Title:filterObj.Title == null ? "" : filterObj.Title,
            SubTitle: filterObj.SubTitle == null ? "" : filterObj.SubTitle,
            NewsScopeId:filterObj.NewsScopeId == null ? "" : filterObj.NewsScopeId,
            IsScrollSearch:filterObj.IsScroll == null ? "" : filterObj.IsScroll,
            IsHotSearch:filterObj.IsHot == null ? "" : filterObj.IsHot
        };
        return params;
    }

    function InitModalEvent() {
        $('#newsadd').on('show.bs.modal', function () {
            //打开事件
        });

        $('#newsadd').on('hide.bs.modal', function () {

            // 关闭事件
            $("#divAddContainer").html("");

        })

        $('#newsedit').on('show.bs.modal', function () {
            //打开事件
        });

        $('#newsedit').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divEditContainer").html("");

        });
        $('#newsdetail').on('show.bs.modal', function () {
            //打开事件
        });

        $('#newsdetail').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divNewsContainer").html("");

        });
        $('#newsGlobalization').on('show.bs.modal', function () {
            //打开事件
        });

        $('#newsGlobalization').on('hide.bs.modal', function () {
            // 关闭事件
            $("#divGlobalizationContainer").html("");

        });
    }

    function CloseAddScreen() {
        $('#newsadd').modal('hide');

    }
    function CloseEditScreen() {
        $('#newsedit').modal('hide');

    }
    function CloseGlobalizationScreen() {
        $('#newsGlobalization').modal('hide');

    }

    function InitToolBarButton()
    {

        document.onkeydown = function(e){
            var ev = document.all ? window.event : e;
            if(ev.keyCode==13) {

                RefreshTable();
            }
        };



        $("#btnAdd").click(function(){
            $('#newsadd').modal('show');
            $("#divAddContainer").load("/News/Add");
        });

        $("#btnEdit").click(function () {

            var selections = $('#table').bootstrapTable('getSelections');
            if (selections.length == 0) {
                layer.alert("请选择要将要修改的数据", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            } else if (selections.length != 1)
            {
                layer.alert("只能选择一条数据进行修改", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            }

            var id = selections[0].Id;
            $('#newsedit').modal('show');
            $("#divEditContainer").load("/News/Edit?newsId=" + id);

        });

        $("#btnGlobalization").click(function () {

            var selections = $('#table').bootstrapTable('getSelections');
            if (selections.length == 0) {
                layer.alert("请选择要将要国际化的数据", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            } else if (selections.length != 1)
            {
                layer.alert("只能选择一条数据进行国际化操作", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            }

            var id = selections[0].Id;
            $('#newsGlobalization').modal('show');
            $("#divGlobalizationContainer").load("/News/Globalization?newsId=" + id);

        });

        $("#btnDelete").click(function(){
            var selections = $('#table').bootstrapTable('getSelections');
            if(selections.length == 0)
            {
                layer.alert("请选择要将要删除的数据", {
                    skin: 'layui-layer-molv'
                            ,closeBtn: 0
                            ,shift: 5 //动画类型
                });
                return ;
            }
            var newsIds =[];
            for(var i=0;i<selections.length;i++)
            {
                var id = selections[i].Id;
                newsIds.push(id);
            }
            //delete records
            var jsonContactId = JSON.stringify(newsIds);
            $.ajax({
                type: "post",//使用get方法访问后台
                dataType: "json",//返回json格式的数据
                url: "/News/BachDeleteById",
                data: jsonContactId,
                async:false,
                success: function(message){
                    if(message.Success)
                    {
                        RefreshTable();
                    }else{
                        layer.alert(message.Content, {
                            skin: 'layui-layer-molv'
                            ,closeBtn: 0
                            ,shift: 5 //动画类型
                        });
                    }

                }
            });
        });
    }

    function Detail(id) {
        $('#newsdetail').modal('show');
        $("#divNewsContainer").load("/News/Detail?newsId=" + id);
    }

    function RefreshTable()
    {
        $('#table').bootstrapTable('refresh');

    }

    function DicNewsScope(value)
    {
        var result = value;
        for (var i = 0; i < lsNewsScope.length;i++)
        {
            if (lsNewsScope[i].Id == value)
            {
                result = lsNewsScope[i].TypeName;
            }
        }
        return result;
    }
</script>
