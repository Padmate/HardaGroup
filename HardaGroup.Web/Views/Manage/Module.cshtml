@using HardaGroup.Utility;
@using HardaGroup.Models;
@using System.Configuration;
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
    var type = Request["type"];
    ViewBag.Title = Common.Dic_ModuleType[type];

    var urlRewriteExtension = ConfigurationManager.AppSettings["UrlRewriteExtension"];

}

<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12 col-is-12 col-sm-12 col-md-12">

        </div>

    </div>
    <div class="row">
        <div class="col-xs-12 col-is-12 col-sm-12 col-md-12">

            <div id="toolbar">
                <a id="btnAdd" class="btn btn-success">
                    <i class="glyphicon glyphicon-plus"></i> 新 增
                </a>
                <a id="btnEdit" class="btn btn-info">
                    <i class="glyphicon glyphicon-edit"></i> 修 改
                </a>
                <a id="btnDelete" class="btn btn-danger">
                    <i class="glyphicon glyphicon-remove"></i> 删 除
                </a>
                <a id="btnGlobalization" class="btn btn-primary">
                    <i class="glyphicon glyphicon-transfer"></i> 国际化
                </a>

            </div>
            <table id="table"></table>

        </div>

    </div>

</section>

<!--#region摸态框-->
<div class="curd-model modal fade" id="win-modal" role="dialog" aria-hidden="true">
    <div class="modal-content">
        <div class="container">

            <div id="win-modal-content"></div>


        </div>
    </div>
</div>


<!--Script要放在HTML标签后，才能将值绑定到标签-->
<script type="text/javascript">

    //服务特色
    var _type = '@Request["type"]';

    $(document).ready(function () {
        InitTable();
        InitToolBarButton();
        InitModalEvent();


    });
    function InitTable()
    {
        $('#table').bootstrapTable({
            height:800,
            method: 'post',                 //The method type to request remote data.
            url: '/Module/GetPageData',
            dataType: "json",               //The type of data that you are expecting back from the server.
            contentType:'application/json',
            pagination: true,               //True to show a pagination toolbar on table bottom.
            pageSize: 10,                   //初始化每页显示几条
            pageNumber:1,                   //初始化在第几页
            pageList: [10,25,50,100,200,'All'],
            sidePagination: "server",       //服务端请求
            idField:'Id',
            toolbar:'#toolbar',
            showRefresh:true,
            search:false,
            paginationVAlign:'bottom',  //分页条显示在顶部
            //searchOnEnterKey:true,  //回车查询
            clickToSelect:true,     //单击行选中数据
            queryParams: ConstructQueryParams,
            //queryParamsType: "limit",
            locale: 'zh-CN',
            showColumns: true,
            showToggle: true,
            showExport: true, //数据导出
            exportDataType: 'basic', // 'basic', 'all', 'selected'.
            exportTypes: ['excel'],
            filterControl: true,   //显示过滤
            filterShowClear: true,  //显示清空过滤按钮
            columns: [{
                checkbox: true
            },
            {
                field: 'Id',
                title: 'Id',
                visible:false,
            },
            {
                field: 'Image',
                title: '图 标',
                formatter: function (value, row, index) {

                    var image = row.Image;
                    if (image != null) {

                        var imgHtml = "<img class='img-responsive' src=" + image.VirtualPath + "></img>";
                        return imgHtml;
                    }
                },
                width: '20%'

            },
            {
                field: 'ImageClass',
                title: '图片Class'
            },
            {
                field: 'Title',
                title: '标题',
                filterControl: "input",
                formatter: function (value, row, index) {

                    var result = value;
                    if (result.length > 20) {
                        result = '<a class="custooltip" href="#">' + result.substr(0, 20) + '......<span class="classic">' + value + '</span></a>';

                    }
                    return result;
                }

            },
            {
                field: 'SubTitle',
                title: '二级标题',
                filterControl: "input",
                formatter: function (value, row, index) {

                    var result = value;
                    if (result.length > 20) {
                        result = '<a class="custooltip" href="#">' + result.substr(0, 20) + '......<span class="classic">' + value + '</span></a>';

                    }
                    return result;
                }

            },
            {
                field: 'Content',
                title: '内容',
                formatter: function (value, row, index) {
                    var result = '<a href="javaScript:void(0)" onclick="Detail(&apos;' + row.Id + '&apos;)">点击查看</a>';
                    return result;
                }

            },
            {
                field: 'Sequence',
                title: '顺序'
            }
            ]
        });
    }


    function ConstructQueryParams(param)
    {
        var filterObj = {};
        if (param.filter != null) {
            filterObj = JSON.parse(param.filter);
        }

        var params = {
            limit: param.limit, //页面大小
            offset:param.offset,//偏移数量
            page: param.offset / param.limit, //页码
            Title: filterObj.Title == null ? "" : filterObj.Title,
            SubTitle: filterObj.SubTitle == null ? "" : filterObj.SubTitle,
            Type: _type
        };
        return params;
    }

    function InitModalEvent() {
        $('#win-modal').on('shown.bs.modal', function () {
            //打开事件
            alert("shown");
        });

        $('#win-modal').on('hide.bs.modal', function () {

            // 关闭事件
            $("#win-modal-content").empty();

        })

    }

    function CloseModal() {
        $('#win-modal').modal('hide');

    }


    function InitToolBarButton()
    {

        document.onkeydown = function(e){
            var ev = document.all ? window.event : e;
            if(ev.keyCode==13) {

                RefreshTable();
            }
        };



        $("#btnAdd").click(function () {

            $('#win-modal').modal('show');
            $("#win-modal-content").load("/Module/Add?type="+_type);
        });

        $("#btnEdit").click(function () {

            var selections = $('#table').bootstrapTable('getSelections');
            if (selections.length == 0) {
                layer.alert("请选择要将要修改的数据", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            } else if (selections.length != 1)
            {
                layer.alert("只能选择一条数据进行修改", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            }

            var id = selections[0].Id;
            $('#win-modal').modal('show');
            $("#win-modal-content").load("/Module/Edit?moduleId=" + id);

        });

        $("#btnGlobalization").click(function () {

            var selections = $('#table').bootstrapTable('getSelections');
            if (selections.length == 0) {
                layer.alert("请选择要将要国际化的数据", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            } else if (selections.length != 1)
            {
                layer.alert("只能选择一条数据进行国际化操作", {
                    skin: 'layui-layer-molv'
                            , closeBtn: 0
                            , shift: 5 //动画类型
                });
                return;
            }

            var id = selections[0].Id;
            $('#win-modal').modal('show');
            $("#win-modal-content").load("/Module/Globalization?moduleId=" + id);

        });

        $("#btnDelete").click(function(){
            var selections = $('#table').bootstrapTable('getSelections');
            if(selections.length == 0)
            {
                layer.alert("请选择要将要删除的数据", {
                    skin: 'layui-layer-molv'
                            ,closeBtn: 0
                            ,shift: 5 //动画类型
                });
                return ;
            }
            var moduleIds =[];
            for(var i=0;i<selections.length;i++)
            {
                var id = selections[i].Id;
                moduleIds.push(id);
            }
            //delete records
            var jsonContactId = JSON.stringify(moduleIds);
            $.ajax({
                type: "post",//使用get方法访问后台
                dataType: "json",//返回json格式的数据
                url: "/Module/BachDeleteById",
                data: jsonContactId,
                async:false,
                success: function(message){
                    if(message.Success)
                    {
                        RefreshTable();
                    }else{
                        layer.alert(message.Content, {
                            skin: 'layui-layer-molv'
                            ,closeBtn: 0
                            ,shift: 5 //动画类型
                        });
                    }

                }
            });
        });
    }

    function Detail(id) {
        $('#win-modal').modal('show');
        $("#win-modal-content").load("/Module/Detail?moduleId=" + id);
    }

    function RefreshTable()
    {
        $('#table').bootstrapTable('refresh');

    }

</script>
