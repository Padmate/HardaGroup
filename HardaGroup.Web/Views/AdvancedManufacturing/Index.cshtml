@using HardaGroup.Web.Globalization;
@using HardaGroup.Models;
@{
    ViewBag.Title = "智能制造";
    M_ModuleSearch introduction = (M_ModuleSearch)ViewData["introduction"];
    List<M_ModuleSearch> serviceScopes = (List<M_ModuleSearch>)ViewData["serviceScope"];
    List<M_ModuleSearch> serviceFeatures = (List<M_ModuleSearch>)ViewData["serviceFeatures"];
    
}
<section>
    <div class="container">
        <h2 class="customer-h2 text-center">@language.AboutTheManufacturing</h2>

        <div class="row">
            @if(introduction !=null)
            {
                @Html.Raw(introduction.Content)
            }
        </div>
    </div>
</section>
<section class="jumbotron text-center">
    <div class="container">

        <h2 class="customer-h2 text-center">@language.ManufacturingServiceScope</h2>

        <div class="row">
        @foreach (var scope in serviceScopes)
        {
            var imageUrl = scope.Image !=null?scope.Image.VirtualPath:"/images/small_model.jpg";
            <div class="col-md-3 col-sm-6 highlight">
                <div class="service-box">
                    <a href="" class="information-box">
                        <img class="img-responsive" src="@imageUrl" />
                        @*<div class="information-box-caption">
                                <div class="information-box-caption-content">
                                    div文字居中
                                    <div class="divmiddle-box">
                                        <div class="divmiddle-box-content">
                                            <p class="customer-content-md whitefont">阅读全文</p>
                                        </div>
                                    </div>
                                </div>
                            </div>*@
                    </a>
                    <div class="service-information-caption">
                        <h4 class="customer-h4">
                            @scope.SubTitle
                        </h4>
                        <span class="customer-content-sm">
                           @scope.Description
                        </span>
                    </div>

                </div>
            </div>
        }

        </div> <!-- /row  -->

    </div>
</section>
<section class="">
    <div class="container">

        <h2 class="customer-h2 text-center">制造服务特色</h2>

        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-digg wow bounceIn text-primary"></i>
                        <h3>Sturdy Templates</h3>
                        <p class="text-muted">Our templates are updated regularly so they don't break.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-paper-plane wow bounceIn text-primary" data-wow-delay=".1s"></i>
                        <h3>Ready to Ship</h3>
                        <p class="text-muted">You can use this theme as is, or you can make changes!</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-newspaper-o wow bounceIn text-primary" data-wow-delay=".2s"></i>
                        <h3>Up to Date</h3>
                        <p class="text-muted">We update dependencies to keep things fresh.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-heart wow bounceIn text-primary" data-wow-delay=".3s"></i>
                        <h3>Made with Love</h3>
                        <p class="text-muted">You have to make your websites with love these days!</p>
                    </div>
                </div>
            </div>
        </div> <!-- /row  -->

    </div>
</section>