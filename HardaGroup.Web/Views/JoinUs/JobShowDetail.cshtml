@using System.Configuration;
@using HardaGroup.Models;
@using HardaGroup.Utility
@using HardaGroup.Web.Globalization;
@{
    var job = (M_JobSearch)ViewData["job"];
    var jobScopes = (List<M_JobScopeSearch>)ViewData["JobScope"];
    
    //当前所属职责分类
    var scopeName = jobScopes.Where(s => s.Id == job.JobScopeId).Select(s => s.TypeName).FirstOrDefault();

    
    ViewBag.Title = job.JobTitle;
    string cultureUri = GlobalizationHelp.GetCurrentThreadCultureUri();
    var urlRewriteExtension = ConfigurationManager.AppSettings["UrlRewriteExtension"];

    var typecode = Request["typecode"];
}

<style>
    .detailNav{
        padding-bottom:30px;
    }
</style>
<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12 detailNav">
                <h3>
                    <a class="customer-content-xs" href="@cultureUri/">@language.Home  &nbsp;>&nbsp;  </a>
                    <a class="customer-content-xs" href="@string.Format("{0}/join-us{1}", cultureUri, urlRewriteExtension)">@language.JoinHarda &nbsp;>&nbsp;</a>
                    <a class="customer-content-xs" href="@string.Format("{0}/join-us/jobs/{1}{2}", cultureUri, job.URLId, urlRewriteExtension)">@job.JobTitle</a>

                </h3>
                <!-- share -->


            </div>
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-2 text-right">
                        <label class="customer-content-sm">职位类别：</label>
                    </div>
                    <div class="col-md-10 customer-content-sm">
                       @scopeName
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 text-right">
                        <label class="customer-content-sm">工作地点：</label>
                    </div>
                    <div class="col-md-10 customer-content-sm">
                        @job.Location
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 text-right">
                        <label class="customer-content-sm">职位名称：</label>
                    </div>
                    <div class="col-md-10 customer-content-sm">
                        @job.JobTitle
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-2 text-right">
                        <label class="customer-content-sm">需求描述：</label>
                    </div>
                    <div class="col-md-10 customer-content-sm">
                        @job.Description
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-2 text-right">
                        <label class="customer-content-sm">发布时间：</label>
                    </div>
                    <div class="col-md-10 customer-content-sm">
                        @job.Pubtime.ToString("yyyy-MM-dd")
                    </div>


                </div>
                <div class="form-group">
                    <div class="col-md-2 text-right">
                        <label class="customer-content-sm">具体需求：</label>
                    </div>
                    <div class="col-md-10">
                        @Html.Raw(job.Content)
                    </div>
                </div>

            </div>

        </div>
        

    </div>
</section>

<script>

</script>

