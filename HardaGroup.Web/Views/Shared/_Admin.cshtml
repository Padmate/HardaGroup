    <![endif]-->


    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!-- AdminLTE App -->
    <script src="~/Scripts/admin/app.js"></script>

</head>
<body class="hold-transition skin-blue sidebar-mini">
