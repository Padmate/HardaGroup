        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    <small>@ViewBag.Title</small>
                </h1>
            </section>
            @RenderBody()
            <!-- Main content -->
            <!-- /.content -->
        </div>

        
    </div>
    
