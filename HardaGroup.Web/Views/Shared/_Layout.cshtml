<script>
    $(function () {
        
        InitSendMail();
    });

    //发送邮件
    function InitSendMail() {
        $("#btn-sendmail").click(function () {

            var obj = {
                Creator: $("#fromname").val(),
                From: $("#fromemail").val(),
                Subject: $("#emailsubject").val(),
                Body: $("#emailContent").val()
            };

            var jsonParam = JSON.stringify(obj);
            $.ajax({
                type: "POST",
                url: "/Mail/SendOnlineMail",
                dataType: "json",
                data: jsonParam,
                async: false,   //同步
                success: function (message) {
                   
                    if (message.Success) {
                        $("#fromname").val("");
                        $("#fromemail").val("");
                        $("#emailsubject").val("");
                        $("#emailContent").val("");

                    }
                    //tips层
                    layer.tips(message.Content, "#btn-sendmail", {
                        tips: [1, '#f90'] //提示位置：上,还可配置颜色
                    });
                }
            });



        });
    }
</script>